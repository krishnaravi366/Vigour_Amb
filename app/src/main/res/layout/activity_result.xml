<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_material_dark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ui.Tracking.ResultActivity">

    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:password="false"
        android:phoneNumber="false"
        android:text="Result"
        android:textColor="@color/accent_material_light"
        android:textSize="50sp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/result_ran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView15"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:inputType="text"
        android:padding="10dp"
        android:text="You ran"

        android:background="@color/switch_thumb_normal_material_dark"
        android:gravity="center"
        android:textStyle="bold"
        android:typeface="monospace" />

    <!--android:layout_alignParentTop="true"-->


    <TextView
        android:id="@+id/result_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result_ran"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:background="@color/switch_thumb_normal_material_dark"
        android:gravity="center"
        android:hint="First Name"
        android:inputType="text"
        android:padding="10dp"
        android:text="0 Meter"
        android:textStyle="bold"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/result_in"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result_distance"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:background="@color/switch_thumb_normal_material_dark"
        android:gravity="center"
        android:hint="First Name"
        android:inputType="text"
        android:padding="10dp"
        android:text="in"
        android:textStyle="bold"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/result_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result_in"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:background="@color/switch_thumb_normal_material_dark"
        android:gravity="center"
        android:hint="First Name"
        android:inputType="text"
        android:padding="10dp"
        android:text="0 Minutes"
        android:textStyle="bold"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/result_at"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result_time"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:background="@color/switch_thumb_normal_material_dark"
        android:gravity="center"
        android:hint="First Name"
        android:inputType="text"
        android:padding="10dp"
        android:text="at speed of"
        android:textStyle="bold"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/result_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result_at"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:background="@color/switch_thumb_normal_material_dark"
        android:gravity="center"
        android:inputType="text"
        android:padding="10dp"
        android:text="0 M/S"
        android:textStyle="bold"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/result_and"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result_speed"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:background="@color/switch_thumb_normal_material_dark"
        android:gravity="center"
        android:inputType="text"
        android:padding="10dp"
        android:text="and burned "
        android:textStyle="bold"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/result_calorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result_and"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:background="@color/switch_thumb_normal_material_dark"
        android:gravity="center"
        android:inputType="text"
        android:padding="10dp"
        android:text="0 C"
        android:textStyle="bold"
        android:typeface="monospace" />

    <!--android:layout_alignStart="@+id/fname"-->

